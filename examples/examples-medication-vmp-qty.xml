<!-- "file": "examples-medication-vmp-qty.xml" -->
<!-- Example referencing a Virtual Medicinal Product (VMP) + dispenseRequest as a contained resource -->

<medicationRequest>
 <contained>
  <medication>
   <id value="med1"/>
   <code>
    <coding>
     <system value="http://snomed.info/sct"/>
     <code value="322282001"/>
     <display value="Paracetamol 120mg/5ml oral suspension paediatric sugar free"/>
    </coding>
   </code>
   <text>
    <status value="generated"/>
    <div>Paracetamol 120mg/5ml oral suspension paediatric sugar free</div>
   </text>
  </medication>
 </contained>
 <medicationReference>
  <reference value="#med1" /> 
 </medicationReference>
 <dispenseRequest>
  <quantity>
   <value value="200"/>
   <unit value="ml"/>
   <system value="http://snomed.info/sct"/> 
   <code value="258773002"/>
  </quantity>
 </dispenseRequest>
 <dosageInstruction>
  <!-- dosage information added here -->
 </dosageInstruction>
</medicationRequest>